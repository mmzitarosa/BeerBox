<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorSecondary">@color/colorOrange</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="colorPrimaryDark">@color/colorDarkStatusBar</item>
        <item name="android:navigationBarColor">@color/colorDarkStatusBar</item>
        <item name="android:windowBackground">@color/colorDarkBackground</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="chipStyle">@style/ChipStyle</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="AppBottomSheetDialogStyle">
        <item name="android:paddingStart">@dimen/bottom_sheet_dialog_inner_start_padding</item>
        <item name="android:paddingTop">@dimen/bottom_sheet_dialog_inner_vertical_padding</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_dialog_inner_end_padding</item>
        <item name="android:paddingBottom">@dimen/bottom_sheet_dialog_inner_vertical_padding</item>
    </style>

    <style name="BeerTitle.Dialog" parent="BeerTitle">
        <item name="android:textSize">@dimen/bottom_sheet_dialog_title_text_size</item>
    </style>

    <style name="BeerDescription.Dialog" parent="BeerDescription">
        <item name="android:scaleX">@dimen/bottom_sheet_dialog_description_scaleX</item>
        <item name="android:textSize">@dimen/bottom_sheet_dialog_description_text_size</item>
    </style>

    <style name="BeerDescription.Dialog.Multiline" parent="BeerDescription.Dialog">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:scaleX">1.0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomDialogImage">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="BottomDialogText">
        <item name="android:paddingStart">@dimen/bottom_sheet_dialog_text_start_margin</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_dialog_text_end_margin</item>
    </style>

    <style name="Logo">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="Logo.LogoBox" parent="Logo">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppSearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/search_view_text_size</item>
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="AppSearchViewStyle">
        <item name="android:theme">@style/AppSearchViewTheme</item>
        <item name="android:layout_marginStart">@dimen/search_view_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/search_view_horizontal_margin</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:queryHint">@string/search</item>
    </style>

    <style name="AppBanner">
        <item name="android:layout_marginStart">@dimen/banner_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/banner_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/banner_top_margin</item>
        <item name="android:background">@drawable/banner_bg</item>
    </style>

    <style name="AppBannerTextBox">
        <item name="android:paddingTop">@dimen/banner_text_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/banner_text_vertical_padding</item>
    </style>

    <style name="AppBannerText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorDarkBackground</item>
    </style>

    <style name="AppBannerText.Title" parent="AppBannerText">
        <item name="android:text">@string/banner_title</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/banner_title_size</item>
    </style>

    <style name="AppBannerText.Subtitle" parent="AppBannerText">
        <item name="android:text">@string/banner_subtitle</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/banner_subtitle_size</item>
    </style>

    <style name="AppBannerImage">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:src">@drawable/ic_img</item>
    </style>

    <style name="ChipGroupScrollView">
        <item name="android:layout_marginTop">@dimen/chipgroup_horizontal_scroll_top_margin</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:paddingStart">@dimen/chipgroup_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/chipgroup_horizontal_padding</item>
        <item name="singleLine">true</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorItems</item>
        <item name="android:textAlignment">center</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="BeersRecyclerView">
        <item name="android:layout_marginStart">@dimen/beers_list_start_margin</item>
        <item name="android:layout_marginTop">@dimen/beers_list_top_margin</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarSize">@dimen/scrollbar_size</item>
        <item name="android:overScrollMode">never</item>

    </style>

    <style name="BeerItem">
        <item name="android:paddingTop">@dimen/beer_item_padding_top</item>
        <item name="android:paddingStart">@dimen/beer_item_padding_start</item>
        <item name="android:paddingBottom">@dimen/beer_item_padding_bottom</item>
        <item name="android:paddingEnd">@dimen/beer_item_padding_end</item>
    </style>

    <style name="Beer">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BeerTitle" parent="Beer">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textScaleX">@dimen/beer_item_title_scaleX</item>
        <item name="android:textSize">@dimen/beer_item_title_text_size</item>
    </style>

    <style name="BeerDescription" parent="Beer">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textScaleX">@dimen/beer_item_description_scaleX</item>
        <item name="android:textSize">@dimen/beer_item_description_text_size</item>
        <item name="android:textColor">@color/colorDarkTextSecond</item>
        <item name="android:lineSpacingExtra">@dimen/beer_item_description_line_spacing</item>
    </style>

    <style name="BeerDescription.TwoLines" parent="BeerDescription">
        <item name="android:maxLines">@integer/description_lines</item>
        <item name="android:minLines">@integer/description_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/beer_item_description_top_margin</item>
    </style>

    <style name="BeerMoreInfo" parent="Beer">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">@dimen/beer_item_link_text_size</item>
        <item name="android:textScaleX">@dimen/beer_item_link_scaleX</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_dialog_top_margin</item>
        <item name="android:text">@string/more_info</item>
    </style>

    <style name="BeerImageBox">
        <item name="android:paddingStart">@dimen/beer_item_image_start_padding</item>
        <item name="android:paddingEnd">@dimen/beer_item_image_end_padding</item>
    </style>

    <style name="BeerImage">
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="colorPrimaryDark">@color/colorDarkStatusBar</item>
        <item name="android:navigationBarColor">@color/colorDarkStatusBar</item>
        <item name="android:windowBackground">@color/colorDarkBackground</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="logo">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="logo.logo_box" parent="logo">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="beers_recyclerView">
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">@dimen/zero_margin</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="beer_item">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingRight">@dimen/def_margin_X2</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">@dimen/zero_margin</item>
    </style>

    <style name="beer">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="beer_title" parent="beer">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textScaleX">1.05</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="beer_description" parent="beer">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textScaleX">1.05</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorDarkTextSecond</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="beer_more_info" parent="beer">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textScaleX">0.965</item>
    </style>

</resources>

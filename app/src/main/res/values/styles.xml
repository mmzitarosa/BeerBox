<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorSecondary">@color/colorOrange</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="colorPrimaryDark">@color/colorDarkStatusBar</item>
        <item name="android:navigationBarColor">@color/colorDarkStatusBar</item>
        <item name="android:windowBackground">@color/colorDarkBackground</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="chipStyle">@style/ChipStyle</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">13sp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorItems</item>
        <item name="android:textAlignment">center</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="Logo">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Logo.LogoBox" parent="Logo">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BeersRecyclerView">
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarSize">@dimen/zero_margin</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="BeerItem">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingRight">@dimen/def_margin_X2</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">@dimen/zero_margin</item>
    </style>

    <style name="Beer">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BeerTitle" parent="Beer">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textScaleX">1.05</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BeerDescription" parent="Beer">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textScaleX">1.05</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorDarkTextSecond</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="BeerMoreInfo" parent="Beer">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textScaleX">0.965</item>
    </style>

</resources>

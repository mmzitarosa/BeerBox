<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/colorText</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">@color/colorStatusBar</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="logo">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="logo_box" parent="logo">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="link">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="beers_recyclerView">
        <item name="android:layout_marginStart">@dimen/def_margin_X2</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">@dimen/zero_margin</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="beer_item">
        <item name="android:paddingTop">@dimen/def_margin_X2</item>
        <item name="android:paddingRight">@dimen/def_margin_X2</item>
        <item name="android:paddingBottom">@dimen/def_margin_X2</item>
        <item name="android:paddingLeft">@dimen/zero_margin</item>
    </style>

    <style name="beer_title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="beer_description">
        <item name="android:textColor">@color/colorTextSecond</item>
    </style>

</resources>
